---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import PostCard from '@/components/PostCard.astro';
import Hero from '@/components/Hero.astro';

const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

const posts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const featuredPost = posts[0];
const regularPosts = posts.slice(1);

const allTags = [...new Set(posts.flatMap(post => post.data.tags))].sort();
---

<BaseLayout title="Blog">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <Hero 
      name="Daniel Dieppa"
      title="Senior Software Developer"
      description="Sharing my journey with .NET, Azure, Clean Architecture, and everything backend development."
    />

    <!-- Tags Filter -->
    {allTags.length > 0 && (
      <section class="mb-10">
        <div class="flex items-center gap-2 flex-wrap">
          <span class="text-sm font-medium" style="color: var(--text-tertiary);">Browse by tag:</span>
          {allTags.slice(0, 10).map(tag => (
            <a 
              href={`/tags/${tag.toLowerCase()}`}
              class="px-3 py-1 rounded-full text-sm font-medium transition-all hover:scale-105"
              style="background-color: var(--bg-tertiary); color: var(--text-secondary);"
            >
              #{tag}
            </a>
          ))}
          {allTags.length > 10 && (
            <a 
              href="/tags"
              class="px-3 py-1 rounded-full text-sm font-medium transition-colors"
              style="color: var(--gradient-start);"
            >
              View all â†’
            </a>
          )}
        </div>
      </section>
    )}

    <!-- Featured Post -->
    {posts.length > 0 && featuredPost && (
      <section class="mb-16">
        <div class="flex items-center gap-2 mb-6">
          <span class="text-xs font-semibold uppercase tracking-wider" style="color: var(--text-tertiary);">Featured</span>
          <div class="flex-1 h-px" style="background-color: var(--border-color);"></div>
        </div>
        <PostCard 
          title={featuredPost.data.title}
          description={featuredPost.data.description}
          pubDate={featuredPost.data.pubDate}
          slug={featuredPost.id}
          tags={featuredPost.data.tags}
          image={featuredPost.data.image}
          draft={featuredPost.data.draft}
          featured={true}
          rawContent={featuredPost.body}
        />
      </section>
    )}

    <!-- Posts Grid -->
    {regularPosts.length > 0 && (
      <section>
        <div class="flex items-center gap-2 mb-6">
          <h2 class="text-2xl font-bold">Latest Posts</h2>
          <div class="flex-1 h-px" style="background-color: var(--border-color);"></div>
        </div>
        
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {regularPosts.map(post => (
            <PostCard 
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              slug={post.id}
              tags={post.data.tags}
              image={post.data.image}
              draft={post.data.draft}
              rawContent={post.body}
            />
          ))}
        </div>
      </section>
    )}

    {posts.length === 0 && (
      <section>
        <div class="text-center py-16 rounded-xl border" style="background-color: var(--bg-secondary); border-color: var(--border-color);">
          <p class="text-lg mb-2" style="color: var(--text-secondary);">No posts yet</p>
          <p class="text-sm" style="color: var(--text-tertiary);">Check back soon for new content!</p>
        </div>
      </section>
    )}
  </div>
</BaseLayout>
