---
import { formatDateShort } from '@/utils/formatDate';
import { formatReadingTime, calculateReadingTime } from '@/utils/readingTime';
import TagList from './TagList.astro';
import { Fragment } from 'astro/jsx-runtime';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags: string[];
  image?: {
    src: string;
    alt: string;
  };
  rawContent?: string;
  draft?: boolean;
  featured?: boolean;
}

const { title, description, pubDate, slug, tags, image, rawContent, draft, featured = false } = Astro.props;
const readingTime = rawContent ? calculateReadingTime(rawContent) : 0;

// #region agent log
fetch('http://127.0.0.1:7242/ingest/3d1e002a-eba7-400f-906b-14aee1f56652', {
  method: 'POST',
  headers: { 'Content-Type': 'application/json' },
  body: JSON.stringify({
    sessionId: 'debug-session',
    runId: 'pre-fix',
    hypothesisId: 'H1',
    location: 'src/components/PostCard.astro:frontmatter',
    message: 'PostCard props snapshot',
    data: {
      slug,
      featured,
      hasImage: Boolean(image),
      tagsCount: tags?.length ?? 0
    },
    timestamp: Date.now()
  })
}).catch(() => {});
// #endregion

// #region agent log
fetch('http://127.0.0.1:7242/ingest/3d1e002a-eba7-400f-906b-14aee1f56652', {
  method: 'POST',
  headers: { 'Content-Type': 'application/json' },
  body: JSON.stringify({
    sessionId: 'debug-session',
    runId: 'pre-fix',
    hypothesisId: 'H2',
    location: 'src/components/PostCard.astro:readingTime',
    message: 'Reading time fragment conditions',
    data: {
      readingTime,
      willRenderFragment: readingTime > 0,
      rawContentPresent: Boolean(rawContent)
    },
    timestamp: Date.now()
  })
}).catch(() => {});
// #endregion
---

{featured ? (
  <article class="group relative rounded-xl overflow-hidden border transition-all duration-300 hover:border-[var(--gradient-start)]/50" style="background-color: var(--card-bg); border-color: var(--border-color);">
    {draft && (
      <div class="absolute top-4 right-4 z-10 px-3 py-1.5 rounded-md text-xs font-semibold uppercase tracking-wide bg-amber-500/90 text-white">
        Draft
      </div>
    )}
    
    <div class="lg:grid lg:grid-cols-2 gap-0">
      {image && (
        <div class="aspect-video lg:aspect-auto lg:h-full overflow-hidden">
          <img 
            src={image.src} 
            alt={image.alt}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            loading="lazy"
          />
        </div>
      )}
      
      <div class="p-8 lg:p-10 flex flex-col justify-center">
        <div class="flex items-center gap-3 text-sm mb-4 uppercase tracking-wide" style="color: var(--text-tertiary);">
          <time datetime={pubDate.toISOString()}>
            {formatDateShort(pubDate)}
          </time>
          <!-- #region agent log -->
          {readingTime > 0 && (() => {
            fetch('http://127.0.0.1:7242/ingest/3d1e002a-eba7-400f-906b-14aee1f56652', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                sessionId: 'debug-session',
                runId: 'pre-fix',
                hypothesisId: 'H3',
                location: 'src/components/PostCard.astro:featured-readingTime',
                message: 'Featured branch will render reading time fragment',
                data: {
                  readingTime,
                  tagsCount: tags?.length ?? 0
                },
                timestamp: Date.now()
              })
            }).catch(() => {});
            return null;
          })()}
          <!-- #endregion -->
          {readingTime > 0 && (
            <Fragment>
              <span>•</span>
              <span>{formatReadingTime(readingTime)}</span>
            </Fragment>
          )}
        </div>
        
        <h2 class="text-3xl lg:text-4xl font-bold mb-4 leading-tight transition-colors group-hover:text-[var(--gradient-start)]">
          <a href={`/blog/${slug}`} class="after:absolute after:inset-0">
            {title}
          </a>
        </h2>
        
        <p class="text-lg mb-6 leading-relaxed line-clamp-3" style="color: var(--text-secondary);">
          {description}
        </p>
        
        <div class="flex items-center justify-between flex-wrap gap-4">
          <TagList tags={tags} size="md" />
          <a 
            href={`/blog/${slug}`}
            class="text-sm font-semibold flex items-center gap-2 transition-colors hover:text-[var(--gradient-start)]"
            style="color: var(--text-secondary);"
          >
            Read more
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </article>
) : (
  <article class="group relative rounded-xl overflow-hidden border transition-all duration-300 hover:border-[var(--gradient-start)]/30" style="background-color: var(--card-bg); border-color: var(--border-color);">
    {draft && (
      <div class="absolute top-3 right-3 z-10 px-2 py-1 rounded-md text-xs font-medium bg-amber-500/90 text-white">
        Draft
      </div>
    )}
    
    {image && (
      <div class="aspect-video overflow-hidden">
        <img 
          src={image.src} 
          alt={image.alt}
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
      </div>
    )}
    
    <div class="p-5">
      <div class="flex items-center gap-3 text-sm mb-3" style="color: var(--text-tertiary);">
        <time datetime={pubDate.toISOString()}>
          {formatDateShort(pubDate)}
        </time>
        <!-- #region agent log -->
        {readingTime > 0 && (() => {
          fetch('http://127.0.0.1:7242/ingest/3d1e002a-eba7-400f-906b-14aee1f56652', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              sessionId: 'debug-session',
              runId: 'pre-fix',
              hypothesisId: 'H4',
              location: 'src/components/PostCard.astro:default-readingTime',
              message: 'Default branch will render reading time fragment',
              data: {
                readingTime,
                tagsCount: tags?.length ?? 0
              },
              timestamp: Date.now()
            })
          }).catch(() => {});
          return null;
        })()}
        <!-- #endregion -->
        {readingTime > 0 && (
          <Fragment>
            <span>•</span>
            <span>{formatReadingTime(readingTime)}</span>
          </Fragment>
        )}
      </div>
      
      <h2 class="text-xl font-bold mb-2 transition-colors group-hover:text-[var(--gradient-start)]">
        <a href={`/blog/${slug}`} class="after:absolute after:inset-0">
          {title}
        </a>
      </h2>
      
      <p class="mb-4 line-clamp-2" style="color: var(--text-secondary);">
        {description}
      </p>
      
      <TagList tags={tags} size="sm" />
    </div>
  </article>
)}

